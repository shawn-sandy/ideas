<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>{{ metadata.title }} | {{ metadata.description }}</title>
    <!-- settings style -->
    {% for styles in metadata.styles %}
    <link href="{{ styles }}" rel="stylesheet">
    {% endfor %}
    <!-- custom stylesheets -->
    {% if stylesheets %}
    {% for style in stylesheets %}
    <link rel="stylesheet" href="{{ style }}" />
    {% endfor %}
    {% endif %}
    {% block head %}
    {% endblock %}
</head>

<body class="ss-bg-classic-blue min-vh-100">
    {#% include "partials/no-ie.html" %#}
    <!-- nav -->
    {% include "partials/main-nav.njk" %}
    <!-- header -->
    {% block header %}

    {% include "partials/hero.njk" %}

    {% endblock %}

    <!-- main content -->
    <main class="ss-bg-white ui-ht-40vmin py-5">
        {% block content %}
        {{ content | safe }}
        {% endblock %}
    </main>
    <!-- footer -->
    {% block footer %}
    {% include "partials/footer.njk" %}
    {% endblock %}
    <!-- scripts - replaced jquery with vue -->
    {% for js in metadata.scripts %}
    <script src="{{ js }}"></script>
    {% endfor %}
    {#% include "./partials/footer-scripts.html" %#}
    {% if scripts %}
    {% for script in scripts %}
    <script src="{{ script }}"></script>
    {% endfor %}
    {% endif %}
</body>

</html>