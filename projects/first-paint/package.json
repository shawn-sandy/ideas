{
  "name": "@shawnsandy/first-paint",
  "version": "0.2.5",
  "description": "First Paint is an easy to use CSS/SCSS starter library that contains accessibility focused, classless, semantic HTML elements and components for quickly scaffolding/building modern, lightweight mobile friendly websites.",
  "keywords": [
    "CSS",
    "Toolkit",
    "SCSS",
    "HTML",
    "Classless",
    "SEMANTIC"
  ],
  "author": "shawn-sandy <creative@shawnsandy.com>",
  "homepage": "https://github.com/shawn-sandy/ideas#readme",
  "license": "MIT",
  "main": "index.scss",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "components",
    "dist",
    "tokens",
    "index.css",
    "/**/*.scss"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shawn-sandy/ideas.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "start": "run-s clean && run-p parcel watch",
    "watch": "run-s watch:*",
    "watch:index": "sass index.scss:index.css custom-styles.scss:custom-styles.css --load-path=node_modules --watch --no-source-map",
    "watch:scss": "sass --style compressed components:dist/css/. index.scss:dist/css/index.css --load-path=node_modules --color",
    "build:scss": "sass --style compressed components:dist/css/. index.scss:dist/css/index.css custom-styles.scss:dist/css/custom-styles.css --load-path=node_modules --color",
    "parcel": "parcel serve index.html index.css --hmr-port --out-dir www --open",
    "build": "run-s clean:dist build:*",
    "build:parcel": "parcel build index.js --no-content-hash --out-dir dist",
    "clean": "trash www/**/*.*",
    "clean:dist": "trash dist/**/*.*"
  },
  "bugs": {
    "url": "https://github.com/shawn-sandy/ideas/issues"
  },
  "devDependencies": {
    "@shawnsandy/mix": "^0.10.12",
    "autoprefixer": "^10.2.4",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "postcss": "^8.2.4",
    "postcss-modules": "^4.0.0",
    "posthtml-include": "^1.6.0",
    "sass": "^1.32.6"
  },
  "dependencies": {
    "parcel": "^1.12.4",
    "trash-cli": "^3.1.0"
  },
  "browserslist": [
    "> 0.2%",
    "not dead"
  ]
}
