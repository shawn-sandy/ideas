{
  "name": "@shawnsandy/first-paint",
  "version": "0.11.3",
  "description": "First Paint is an easy to use CSS/SCSS starter library that contains accessibility focused, classless, semantic HTML elements and components for quickly scaffolding/building modern, lightweight mobile friendly websites.",
  "keywords": [
    "CSS",
    "Toolkit",
    "SCSS",
    "HTML",
    "Classless",
    "SEMANTIC"
  ],
  "author": "shawn-sandy <creative@shawnsandy.com>",
  "homepage": "https://github.com/shawn-sandy/ideas/blob/main/projects/first-paint/README.md",
  "license": "MIT",
  "main": "index.scss",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "components",
    "dist",
    "tokens",
    "index.css",
    "/**/*.scss",
    "/**/*.map"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shawn-sandy/ideas.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "start": "run-s clean && run-p 11ty watch:*",
    "watch": "run-p watch:*",
    "11ty": " eleventy --serve",
    "watch:index": "sass src/index.scss:src/index.css src/custom-styles.scss:src/custom-styles.css src/components.scss:src/components.css --load-path=node_modules --watch --no-source-map",
    "watch-scss": "sass --style compressed src/components:dist/css/. src/index.scss:dist/css/index.css --load-path=node_modules --color",
    "build:scss": "sass src/index.scss:dist/css/index.css src/custom-styles.scss:dist/css/custom-styles.css src/components:dist/css/components/. --load-path=node_modules --color",
    "build:css": "postcss ./dist/css/*.css -d ./dist/css/ --ext min.css",
    "build": "run-s clean:dist build:*",
    "clean": "trash dist/**/",
    "clean:dist": "trash dist/**"
  },
  "bugs": {
    "url": "https://github.com/shawn-sandy/ideas/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@shawnsandy/ideas": "^0.2.0",
    "@shawnsandy/marked": "^0.2.0",
    "@shawnsandy/mix": "^0.10.17",
    "autoprefixer": "^10.2.4",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-modules": "^4.0.0",
    "posthtml-include": "^1.6.0",
    "sass": "^1.32.6",
    "trash-cli": "^3.1.0"
  },
  "resolutions": {
    "node-forge": "0.10.0"
  },
  "browserslist": [
    "> 0.2%",
    "not dead"
  ]
}
