{
  "name": "@shawnsandy/first-paint",
  "version": "2.0.3",
  "description": "First Paint is an easy to use CSS/SCSS starter library that contains accessibility focused, classless, semantic HTML elements and components for quickly scaffolding/building modern, lightweight mobile friendly websites.",
  "keywords": [
    "CSS",
    "Toolkit",
    "SCSS",
    "HTML",
    "Classless",
    "SEMANTIC"
  ],
  "author": "shawn-sandy <creative@shawnsandy.com>",
  "homepage": "https://github.com/shawn-sandy/ideas/blob/main/projects/first-paint/README.md",
  "license": "MIT",
  "main": "index.scss",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "components",
    "dist",
    "tokens",
    "index.css",
    "/**/*.scss",
    "/**/*.map"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shawn-sandy/ideas.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "start": "run-p watch:* 11ty",
    "watch": "run-p watch:*",
    "11ty": "eleventy --serve",
    "11ty-prod": "eleventy",
    "watch:index": "sass --watch src/index.scss:src/index.css src/custom-styles.scss:src/custom-styles.css src/components.scss:src/components.css  src/styles:src/css/. --load-path=node_modules --no-source-map",
    "watch:v2": "sass --watch --style compressed src/v2/index.scss:src/v2/css/index.css src/v2/tokens:src/v2/css/tokens/.  src/v2/modules:src/v2/css/modules/. --load-path=node_modules --source-map",
    "watch-scss": "sass --style --update compressed src/components:dist/css/. src/index.scss:dist/css/index.css src/styles:src/styles/. --load-path=node_modules --color",
    "build:css": "postcss ./dist/css/*.css --dir ./dist/css/ --ext min.css",
    "build:v2": "run-s build-v2-prefix build-v2",
    "build-v2-prefix": "postcss ./src/v2/css/**/*.css --base src/v2/css --use autoprefixer -d ./src/v2/vendor --no-map",
    "build-v2": "postcss ./src/v2/**/*.css --base src/v2 -d ./dist/v2/ --ext min.css --map",
    "build": "run-s build:*",
    "production": "11ty-prod",
    "clean": "trash dist/**/",
    "clean:dist": "trash dist/**"
  },
  "bugs": {
    "url": "https://github.com/shawn-sandy/ideas/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@shawnsandy/code-clipper": "^0.2.7",
    "@shawnsandy/ideas": "^0.3.5",
    "@shawnsandy/marked": "^0.2.5",
    "@shawnsandy/mix": "^0.10.24",
    "autoprefixer": "^10.3.4",
    "clean-css": "^5.1.5",
    "cssnano": "^5.0.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-modules": "^4.2.2",
    "posthtml-include": "^1.7.1",
    "sass": "^1.39.2",
    "trash-cli": "^4.0.0"
  },
  "resolutions": {
    "node-forge": "0.10.0"
  },
  "browserslist": [
    "> 0.2%",
    "not dead"
  ],
  "dependencies": {
    "concurrently": "^6.2.1",
    "modern-css-reset": "^1.4.0"
  }
}
