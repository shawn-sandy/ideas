{% extends 'cover.njk' %}
{% block styles %}
  <link rel="stylesheet" href="https://unpkg.com/modern-css-reset/dist/reset.min.css"/>
  <link rel="stylesheet" href="/v2/css/components/index.css"/>
  <link rel="stylesheet" href="/v2/css/components/layouts/cover.css"/>
{% endblock %}
{% block feature %}{% endblock %}
{% block main %}
  <section style="--direction: column; --justify: flex-start; --align:initial; --min-w: 100%">
    <h2>Components</h2>
    <hr>
      <section>
        {% for item in collections['components'] %}
          <article>
            <h5>
              <a href="{{ item.url }}" style="--fs: var(--lg); --cl: var(--dark); --my: 0 var(--rem)">{{ item.data.title }}</a>
            </h5>
            <p style="--fs: var(--md); --cl: gray">
              {{ item.data.description }}
            </p>
            <p>
              <a href="{{ item.url }}" style="--btn-pill">View Component</a>
            </p>
          </article>
          <hr style="hr-my: var(--rem)">
          {% endfor %}
        </section>
      </section>
    {% endblock %}
