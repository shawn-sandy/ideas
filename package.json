{
  "name": "ideas",
  "version": "0.0.1",
  "private": true,
  "description": "IDEA~. (beta) is a simple and easy to use HTML, CSS and JAVASCRIPT toolkit (framework if you prefer) for creating and managing digital products--style/design systems, pattern libraries, UI Kits, style-guides, prototypes, etc.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx @11ty/eleventy --serve",
    "build": "npx @11ty/eleventy",
    "parcel": "parcel build main.js --no-content-hash --out-dir build/uikit --no-minify",
    "parcel-css": "parcel build styles.js --no-content-hash --out-dir system/styles/css --no-minify",
    "parcel:watch": "parcel watch main.js --out-dir www/uikit",
    "changelog": "auto-changelog -p --template config/_changelog.hbs",
    "debug": "cd system/debug",
    "tokens": "style-dictionary build --config ./tokens.js"
  },
  "directories": {
    "lib": "dist",
    "gulp": "gulp",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "gulp"
  ],
  "auto-changelog": {
    "unreleased": true,
    "template": "config/_changelog.hbs"
  },
  "main": "index.js",
  "repository": "https://github.com/shawn-sandy/idea.git",
  "author": "shawnsandy <shawnsandy04@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@shawnsandy/bootstrap-lite": "^0.1.6",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@shawnsandy/ideas": "0.1.12",
    "@shawnsandy/mix": "^0.8.5",
    "auto-changelog": "^2.0.0",
    "flat-cache": "^2.0.1",
    "fs": "0.0.1-security",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-print": "^5.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-shell": "^0.8.0",
    "gulp-sizereport": "^1.2.1",
    "gulp-string-replace": "^1.1.2",
    "html-minifier": "^4.0.0",
    "lerna": "^3.20.2",
    "mvp": "git+https://github.com/shawn-sandy/mvp.git",
    "node-fetch": "^2.6.0",
    "parcel": "^1.12.4",
    "require-dir": "^1.2.0",
    "style-dictionary": "^2.8.3"
  }
}
