{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jsx-a11y", "jest"],
  "extends": ["standard", "plugin:jsx-a11y/strict", "plugin:jest/recommended"],
  "parserOptions": {
    "sourceType": "module"
  },

  "rules": {},
  "ignorePatterns": [
    "temp.js",
    "**/vendor/*.js",
    "**/node_modules/*.js",
    "**/*.test.js"
  ],
  "overrides": [
    {
      "files": [
        "**/*.spec.js",
        "**/*.spec.jsx",
        "**/*.test.js",
        "**/*.test.jsx"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
